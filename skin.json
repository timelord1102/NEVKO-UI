{
	
	"UseDefaultPatches": true,	
    "Steam-WebKit": "webkit.css",	
    "RootColors": "Extra/CSS/root.css",
	
    "Conditions": {			
	
        "Badges for Contributes": {
            "description": "Custom Badges for Users Who Donated/Help With Code! [WIP]",
            "default": "yes",
            "tab": "General",
            "values": {
                "no": {},
                "yes": {
                    "TargetCss": {
                        "affects": [".*"], "src": "RefreshUI/WEB/Badges for Contributes/Main Script.css"
                    },
                    "TargetJs": {
                        "affects": [".*"], "src": "RefreshUI/WEB/Badges for Contributes/Main Script.js"
                    }
                }
            }
        },
        "Rounding Avatars": {
            "description": "Three Convenient Presets for Avatars!",
            "default": "Rounded Square",
            "tab": "General",
            "values": {
                "Sharp": {
                    "TargetCss": {
                        "affects": ["^Steam$"], "src": "General/Rounding Avatars/Sharp/Main Avatars.css"
                    }
				},
                "Rounded Square": {
                    "TargetCss": {
                        "affects": ["^Steam$"], "src": "General/Rounding Avatars/Rounded Square/Main Avatars.css"
                    }
				},
				"Circle": {
                    "TargetCss": {
                        "affects": ["^Steam$"], "src": "General/Rounding Avatars/Circle/Main Avatars.css"
                    }
				}
            }
		},
        "Alternative Online Indicator": {
            "description": "Alternative Indicator like in Discord & etc.",
            "default": "no",
            "tab": "General",
            "values": {
                "no": {},
                "yes": {
                    "TargetCss": {
                        "affects": ["^Steam$"], "src": "General/Alternative Online Indicator/Online Indicator View/Status Indicator.css"
                    }
				}
            }
		},
		
        "Refresh Header": {
            "description": "Fancy Lookin' Header!",
            "default": "Top",
            "tab": "Refresh Design",
            "values": {
                "Top": {},
				"Bottom": {
                    "TargetCss": {
                        "affects": ["^Steam$"], "src": "RefreshUI/Main UI/Refresh Header/Top Bar Reverse.css"
                    }
                }
            }
        },
        "Refresh Library [WIP]": {
            "description": "PlaceHolder",
            "default": "Left Side",
            "tab": "Refresh Design",
            "values": {
                "Left Side": {},
				"Right Side": {
                    "TargetCss": {
                        "affects": ["^Steam$"], "src": "RefreshUI/Library UI/Refresh Library/Flip Library.css"
                    }
                }
            }
        },
        "Refresh Friends [PLACEHOLDER]": {
            "description": "PlaceHolder",
            "default": "Disabled",
            "tab": "Refresh Design",
            "values": {
                "Disabled": {},
				"Enabled": {}
            }
        },
        "Refresh Menu [PLACEHOLDER]": {
            "description": "PlaceHolder",
            "default": "Disabled",
