        "Refresh Settings [PLACEHOLDER]": {
            "description": "PlaceHolder",
            "default": "Disabled",
            "tab": "Refresh Design",
            "values": {
                "Disabled": {},
				"Enabled": {}
            }
        },
				
        "Refresh Store [PLACEHOLDER]": {
            "description": "PlaceHolder",
            "default": "Disabled",
            "tab": "Refresh Design [WEB]",
            "values": {
                "Disabled": {},
				"Enabled": {}
            }
        },
        "Refresh Profile [PLACEHOLDER]": {
            "description": "PlaceHolder",
            "default": "Disabled",
            "tab": "Refresh Design [WEB]",
            "values": {
                "Disabled": {},
				"Enabled": {}
            }
        },	
        "Refresh Community [PLACEHOLDER]": {
            "description": "PlaceHolder",
            "default": "Disabled",
            "tab": "Refresh Design [WEB]",
            "values": {
                "Disabled": {},
				"Enabled": {}
            }
        },
		
        "[Library] - Resize Library List.": {
            "description": "PlaceHolder",
            "default": "Default",
            "tab": "Refresh Design Config",
            "values": {
                "Default": {
                    "TargetCss": {
                        "affects": ["^Steam$"], "src": "RefreshUI/Library UI/Refresh Library/Library Sizes/Default.css"
                    }
				},
                "Small": {
                    "TargetCss": {
                        "affects": ["^Steam$"], "src": "RefreshUI/Library UI/Refresh Library/Library Sizes/Small.css"
                    }
				},
				"Medium": {
                    "TargetCss": {
                        "affects": ["^Steam$"], "src": "RefreshUI/Library UI/Refresh Library/Library Sizes/Medium.css"
                    }
				},
				"Big": {
                    "TargetCss": {
                        "affects": ["^Steam$"], "src": "RefreshUI/Library UI/Refresh Library/Library Sizes/Big.css"
                    }
				}
            }
        },
        "[Header] - Move Bottom Bar to Top Bar.": {
            "description": "And Removes Bottom Bar. Credits: Shadow [CSS & JS]",
            "default": "yes",
            "tab": "Refresh Design Config",
            "values": {
                "yes": {
                    "TargetCss": {
                        "affects": ["^Steam$"], "src": "RefreshUI/Main UI/Refresh Header/Compact Buttons/Compact Buttons.css"
                    },
					"TargetJs": {
                        "affects": ["^Steam$"], "src": "RefreshUI/Main UI/Refresh Header/Compact Buttons/Compact Buttons.js"
                    }
                },
                "no": {
                    "TargetCss": {
                        "affects": ["^Steam$"], "src": "RefreshUI/Main UI/Refresh Header/Fancy Bottom.css"
                    }
				}
            }
        },
		"[Header] - Move URL Bar to Bottom.": {
            "description": "Just Moves URL Bar to Bottom. Nothing Else.",
            "default": "yes",
            "tab": "Refresh Design Config",
            "values": {
                "yes": {
                    "TargetCss": {
                        "affects": ["^Steam$"], "src": "RefreshUI/Main UI/Refresh Header/Bottom URL Bar.css"
                    }
                },
                "no": {
                    "TargetCss": {
                        "affects": ["^Steam$"], "src": "RefreshUI/Main UI/Refresh Header/Top URL Bar.css"
                    }
                }
            }
        },
        "[Header] - Reorder Main Buttons.": {
            "description": "Swap 'Library' and 'Store' Buttons.",
            "default": "no",
            "tab": "Refresh Design Config",
            "values": {
                "yes": {
                    "TargetCss": {
                        "affects": ["^Steam$"], "src": "RefreshUI/Main UI/Refresh Header/Reorder Buttons.css"
                    }
                },
                "no": {}
            }
        },
        "[Header] - Hide Profile Button.": {
            "description": "Remove Profile Button in Left Side. All Needful Buttons Ports into 'Account Menu'",
            "default": "yes",
            "tab": "Refresh Design Config",
            "values": {
                "yes": {
                    "TargetCss": {
                        "affects": ["^Steam$", "Menu$", "SuperNav$"], "src": "RefreshUI/Main UI/Refresh Header/Account Style/Hide Profile Button.css"  
					},
					"TargetJs": {
						"affects": ["Menu$", "SuperNav$"], "src": "RefreshUI/Main UI/Refresh Header/Account Style/Profile Buttons in Account Menu.js"
					}
                },
                "no": {}
            }
        },     				
		
		"[Account Menu] - Blur Account Name": {
            "description": "Just Blur Account/Login Name in Account Menu. Nothing Else (for now).",
            "default": "yes",
            "tab": "Hider",
            "values": {
                "yes": {				
				"TargetCss": {
						"affects": ["Menu$", "SuperNav$"], "src": "Hider/Blur Account/Account.css"
					}
				},
                "no": {}
            }
        },
		"[Account Button] - Hide Balance": {
            "description": "Just Hide Balance in Account Button. Nothing Else.",
            "default": "yes",
            "tab": "Hider",
            "values": {
                "yes": {				
				"TargetCss": {
						"affects": ["^Steam$"], "src": "Hider/Balance Acc/Balance.css"
					}
				},
                "no": {}
            }
        },
		
        "Extra Popup Menu [PLACEHOLDER]": {
            "description": "PlaceHolder",
            "default": "no",
            "tab": "Experimental",
            "values": {
                "yes": {},
                "no": {}
            }
        }	
	},
	
		"Patches": [	
    {
      "MatchRegexString": ".*",
      "TargetJs": "webkit.js"
    },
		
	{
        "MatchRegexString": "^Steam$",
        "TargetCss": "RefreshUI/Main UI/Refresh Header/Header Code.css"
	},
	{
        "MatchRegexString": "^Steam$",
        "TargetJs": "RefreshUI/Main UI/Refresh Header/Header Script.js"
	},
	{
        "MatchRegexString": "^Steam$",
        "TargetCss": "RefreshUI/Library UI/Refresh Library/Library Code.css"
	},
	
    {
        "MatchRegexString": "^Steam$",
        "TargetCss": "Fixes/Remover/Main UI/RemoveShadow.css"
    },
	{
        "MatchRegexString": "^Steam$",
        "TargetCss": "Fixes/Remover/Main UI/RemoveUseless.css"
    },
	{
        "MatchRegexString": "^Steam$",
        "TargetCss": "Fixes/Remover/Library UI/Resizer Library.css"
    },
	
	{
        "MatchRegexString": ".ModalDialogPopup",
        "TargetCss": "Fixes/Fix Location/Settings UI/SVGLocation.css"
    },
	{
        "MatchRegexString": "^Steam$",
        "TargetCss": "Fixes/Return Old Style Tooltips/ROST.css"
    },

	{
        "MatchRegexString": "^Steam$",
        "TargetCss": "Fixes/Accents/Main Steam Elements.css"
    },	
	{
        "MatchRegexString": "Menu$",
        "TargetCss": "Fixes/Accents/Main Steam Elements.css"
    },
	{
        "MatchRegexString": "SuperNav$",
        "TargetCss": "Fixes/Accents/Main Steam Elements.css"
    },
	
	{
        "MatchRegexString": "^Steam$",
        "TargetCss": "Extra/CSS/accents-config.css"
    },
	{
        "MatchRegexString": "Menu$",
        "TargetCss": "Extra/CSS/accents-config.css"
    },
	{
        "MatchRegexString": "SuperNav$",
        "TargetCss": "Extra/CSS/accents-config.css"
    }
],
	
